@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

<ul>
  @foreach (Machine Machine in Model)
{
 <li>@Html.ActionLink($"{Machine.Name}", "Show", new { id = Machine.MachineId},null)</li>
}
</ul>


<p>@Html.ActionLink("Add a new Machine", "Create",null, new {})</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>