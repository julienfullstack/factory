@{
  Layout = "_Layout";
}


@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 


<ul>
  @foreach (Engineer Engineer in Model)
{
  <li>@Html.ActionLink($"{Engineer.Name}", "Show", new { id = Engineer.EngineerId})</li>
}
</ul>


<p>@Html.ActionLink("Add Engineer", "Create")</p>
